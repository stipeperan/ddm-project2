{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Battle",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "_id",
    "date",
    "participants"
  ],
  "properties": {
    "_id": {
      "type": "string"
    },
    "date": {
      "type": "string",
      "format": "date-time"
    },
    "gym_id": {
      "type": [
        "string",
        "null"
      ]
    },
    "participants": {
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "trainer_id",
          "hasWon",
          "pokemon_ids"
        ],
        "properties": {
          "trainer_id": {
            "type": "string"
          },
          "hasWon": {
            "type": "boolean"
          },
          "pokemon_ids": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}