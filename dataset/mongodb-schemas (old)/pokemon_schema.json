{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Pokemon",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "_id",
    "name",
    "number",
    "stats",
    "types"
  ],
  "properties": {
    "_id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "number": {
      "type": "integer",
      "minimum": 1
    },
    "stats": {
      "type": "object",
      "required": [
        "hp",
        "attack",
        "defense",
        "special_attack",
        "special_defense",
        "speed",
        "total"
      ],
      "properties": {
        "hp": {
          "type": "integer",
          "minimum": 0
        },
        "attack": {
          "type": "integer",
          "minimum": 0
        },
        "defense": {
          "type": "integer",
          "minimum": 0
        },
        "special_attack": {
          "type": "integer",
          "minimum": 0
        },
        "special_defense": {
          "type": "integer",
          "minimum": 0
        },
        "speed": {
          "type": "integer",
          "minimum": 0
        },
        "total": {
          "type": "integer",
          "minimum": 0
        }
      },
      "additionalProperties": false
    },
    "types": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "maxItems": 2
    },
    "form_id": {
      "type": "string"
    },
    "evolves_to_id": {
      "type": [
        "string",
        "null"
      ]
    }
  }
}