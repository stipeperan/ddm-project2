{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Trainer",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "_id",
    "name",
    "specializes_in",
    "pokemons"
  ],
  "properties": {
    "_id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "specializes_in": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "pokemons": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "leads_gym_id": {
      "type": "string"
    }
  }
}